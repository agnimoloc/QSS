<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.churpi.qualityss.client"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.churpi.qualityss.service.PullPushDataService"
            android:exported="false" >
        </service>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name=".ServiceListActivity"
            android:label="@string/title_service_list" >
        </activity>
        <activity
            android:name=".ServiceDetailActivity"
            android:label="@string/title_service_detail"
            android:parentActivityName=".ServiceListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.churpi.qualityss.client.ServiceListActivity" />
        </activity>
        <activity
            android:name=".GeneralReviewActivity"
            android:label="@string/title_activity_general_review" >
        </activity>
        <activity
            android:name=".CheckpointCommentActivity"
            android:label="@string/title_activity_checkpoint_comment" >
        </activity>
        <activity
            android:name=".ShowPhotoActivity"
            android:label="@string/title_activity_show_photo" >
        </activity>
        <activity
            android:name=".StaffReviewListActivity"
            android:label="@string/title_activity_staff_review_list" >
        </activity>
    </application>

</manifest>
